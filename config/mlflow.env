# MLflow Configuration for GoodBooks Recommender

# Tracking server configuration
MLFLOW_TRACKING_URI=file:./mlruns
MLFLOW_DEFAULT_ARTIFACT_ROOT=./mlartifacts

# AWS S3 configuration (optional - for production)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_DEFAULT_REGION=us-east-1
# MLFLOW_S3_ENDPOINT_URL=https://s3.amazonaws.com

# MLflow server settings
MLFLOW_SERVER_HOST=127.0.0.1
MLFLOW_SERVER_PORT=5000
MLFLOW_BACKEND_STORE_URI=sqlite:///./mlflow.db

# Experiment settings
MLFLOW_EXPERIMENT_NAME=goodbooks_recommender
MLFLOW_RUN_NAME_PREFIX=goodbooks_run

# Model registry settings
MLFLOW_MODEL_REGISTRY_URI=sqlite:///./mlflow.db
MLFLOW_REGISTRY_DEFAULT_ARTIFACT_ROOT=./mlartifacts

# Security settings (for production)
# MLFLOW_TRACKING_USERNAME=admin
# MLFLOW_TRACKING_PASSWORD=password

# Logging level
MLFLOW_LOGGING_LEVEL=INFO

# Auto-logging settings
MLFLOW_AUTOLOG_DISABLE=False
MLFLOW_SKLEARN_AUTOLOG=True

# Tags and metadata
MLFLOW_PROJECT_NAME=goodbooks-recommender
MLFLOW_PROJECT_VERSION=1.0.0
MLFLOW_ENVIRONMENT=development

# Performance settings
MLFLOW_PARALLEL_WORKERS=4
MLFLOW_MAX_FILE_SIZE=100MB

# Cleanup settings
MLFLOW_ARTIFACT_CLEANUP_ENABLED=True
MLFLOW_ARTIFACT_RETENTION_DAYS=30
